{
  "name": "ledger-updater",
  "description": "Standalone app manager / firmware updater tool",
  "version": "1.0.0-beta.1",
  "license": "MIT",
  "author": "LedgerHQ",
  "repository": {
    "type": "git",
    "url": "https://github.com/meriadec/ledger-updater"
  },
  "scripts": {
    "lint": "eslint src",
    "prettier": "prettier --write \"src/**/*.js\"",
    "rebuild-deps": "electron-builder install-app-deps",
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "build": {
    "appId": "com.ledgerhq.updater",
    "productName": "Ledger Updater",
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@ledgerhq/errors": "^4.61.0",
    "@ledgerhq/hw-transport": "^4.61.0",
    "@ledgerhq/hw-transport-node-hid-noevents": "^4.61.0",
    "@ledgerhq/live-common": "^5.12.1",
    "invariant": "^2.2.4",
    "react": "^16.8.6",
    "react-dom": "npm:@hot-loader/react-dom",
    "rxjs": "^6.5.2",
    "source-map-support": "^0.5.10",
    "styled-jsx": "^3.2.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "electron": "4.0.1",
    "electron-builder": "^20.41.0",
    "electron-webpack": "^2.6.2",
    "eslint": "^5.16.0",
    "eslint-plugin-react": "^7.13.0",
    "prettier": "^1.17.1",
    "react-hot-loader": "^4.9.0",
    "webpack": "4.28.4"
  }
}
